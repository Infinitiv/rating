<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fio) %>:</strong></dt>
  <dd><%= @employee.fio %></dd>
  <dt><strong><%= Point.human_attribute_name(:sum) %>:</strong></dt>
  <dd><%= @employee.rating(@last_year) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chair_id) %>:</strong></dt>
  <dd><%= link_to @employee.chair.name, @employee.chair if @employee.chair %></dd>
  <dt><strong><%= model_class.human_attribute_name(:post_id) %>:</strong></dt>
  <dd><%= @employee.post.name if @employee.post %></dd>
  <dt><strong><%= model_class.human_attribute_name(:degree_id) %>:</strong></dt>
  <dd><%= @employee.degree ? @employee.degree.name : '-'  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:academic_title_id) %>:</strong></dt>
  <dd><%= @employee.academic_title ? @employee.academic_title.name : '-' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:head) %>:</strong></dt>
  <dd><%= @employee.head? ? 'да, рейтинг ' + '%.2f' % @employee.head_rating(@last_year) : 'нет' %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
