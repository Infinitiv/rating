<%= form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :middle_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :middle_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :chair_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :chair_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :post_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :post_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :degree_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :degree_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :academic_title_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :academic_title_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :head, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :head, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employees_path, :class => 'btn' %>
  </div>
<% end %>
