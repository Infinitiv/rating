<%- model_class = Point -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:qualification) %>:</strong></dt>
  <dd><%= @point.qualification %></dd>
  <dt><strong><%= model_class.human_attribute_name(:learning) %>:</strong></dt>
  <dd><%= @point.learning %></dd>
  <dt><strong><%= model_class.human_attribute_name(:science) %>:</strong></dt>
  <dd><%= @point.science %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clinic) %>:</strong></dt>
  <dd><%= @point.clinic %></dd>
  <dt><strong><%= model_class.human_attribute_name(:social) %>:</strong></dt>
  <dd><%= @point.social %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @point.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @point.employee_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employee_points_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_point_path(@employee, @point), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_point_path(@employee, @point),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
