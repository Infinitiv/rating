<%= form_for @chair, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :faculty_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :faculty_id, options_for_select(@faculties.collect {|p| [p.name, p.id]}, @chair.faculty_id), :include_blank => '', :class => 'select_field' %>
    </div>
    <%= f.label :clinic, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :clinic %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                chairs_path, :class => 'btn' %>
  </div>
<% end %>
